Assert.IsFalse (r.HasValue);

r = Maybe.When (true, () =&gt; {invoked = true; return 42;});
Assert.IsTrue (invoked);
Assert.IsTrue (r.HasValue);
Assert.AreEqual (42, r.Value);
</code>
